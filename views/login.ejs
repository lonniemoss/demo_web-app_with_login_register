<head>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <h1>Login</h1>
    <% if (messages.error) { %>
        <%= messages.error %>
    <% } %>
    <% if (messages.success) { %>
        <%= messages.success %>
    <% } %>

    <form action="/login" method="POST">
        <div>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required placeholder="Enter your email!">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="text" name="password" id="password" required placeholder="************">
        </div>
        <button type="submit">Login</button>
        <div><a href="/register">Don't have an account? Register!</a></div>
    </form>
   
</body>

<style>
h1 {
    text-align: center;
    font-size: 2em;
    font-weight: bold;
    color:aliceblue;
}

form {
    width: 20%;
    margin: auto;
    text-align: left;
    padding: 1em;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: rgb(147, 147, 188);

}

body {
    /* background: #222D32; */
    font-family: 'Roboto', sans-serif;
    text-align: center;
    display: flex;
    min-height: 100vh;
  /* align-items: center; */
    justify-content: center;
    color: white;
    background-image: linear-gradient(79deg, #7439db, #4524e9 48%, #e9f74d);
    animation: gradient 15s ease infinite;
}

@media screen and (min-width: 600px) {
  .auth-form-container {
    padding: 5rem;
    border: 1px solid white;
    border-radius: 10px;
    margin: 0.5rem;
}

@keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
}

}

@media screen and (max-width: 600px) {
  .auth-form-container {
    padding: 2rem;
    border: 1px solid white;
    border-radius: 10px;
    margin: 0.5rem;
  }
}

button {
  border: none;
  background-color: white;
  padding: 10px;
  border-radius: 10px;
  cursor: pointer;
  color: #7439db;
}

label {
  text-align: left;
  padding: 0.25rem 0;
}

input {
  margin: 0.5rem 0;
  padding: 1rem;
  border: none;
  border-radius: 10px;
}

</style>